{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ "error", 2 ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "no-var": [ "error" ],
        "object-shorthand": ["error", "always"],
        "prefer-destructuring": [
            "error",
            { "array": true, "object": true },
            { "enforceForRenamedProperties": false }
        ],
        "max-len": [
            "error",
            {
                "code": 100,
                "comments": 140
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017
    }
}
